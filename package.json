{
  "name": "flower-house",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "lint-staged": {
    "apps/flower-house/**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --cache-location=.cache/eslint --ext ts,tsx --fix --max-warnings 0",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.1.1",
    "turbo": "latest",
    "lint-staged": "^15.2.2",
    "sort-package-json": "^2.7.0",
    "husky": "^9.0.10",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
